<?xml version="1.0" encoding="utf-8"?>
<!--
   Data extraction rules for Android Backup.
   This defines what data is included in cloud and device-to-device backups.
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include app databases for cloud backup -->
        <include domain="database" path="." />
        
        <!-- Include shared preferences for settings -->
        <include domain="sharedpref" path="." />
        
        <!-- Exclude sensitive files -->
        <exclude domain="sharedpref" path="anvil_dialog_prefs.xml" />
    </cloud-backup>
    
    <device-transfer>
        <!-- Include all data for device-to-device transfer -->
        <include domain="database" path="." />
        <include domain="sharedpref" path="." />
    </device-transfer>
</data-extraction-rules>